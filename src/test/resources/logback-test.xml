
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>myLogFile.log</file>

        <encoder>
            <pattern>%date %level [%thread] %logger{35} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="error">
        <appender-ref ref="FILE" />
    </root>
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>


